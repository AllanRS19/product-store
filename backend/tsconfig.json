{
    "compilerOptions": {
        "ignoreDeprecations": "6.0",
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2022",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "drizzle.config.ts"],
    "exclude": ["node_modules"]
}